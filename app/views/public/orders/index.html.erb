<div class="container">
  <h5 style="width: 150px; background-color: #DDDDDD; text-align: center;">注文履歴一覧</h5>
  <div class="row">
    <div class="col-md-12">
    	<table class="table-bordered">
    	  <tr>
          <th style="width:120px;">注文日</th>
          <th style="width:300px;">配送先</th>
          <th style="width:120px;">注文商品</th>
          <th>支払金額</th>
          <th style="width:150px;">注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
             <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment %>円</td>
          <td align="center"><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary position-center text-cenrer" %></td>
        </tr>
        <% end %>
    	</table>
    </div>
	</div>
</div>