<div class="container">
  <h5 style="width: 180px; background-color: #DDDDDD; text-align: center;">管理者ログイン</h5>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>


        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>