<div class="container">
 <h5 style="width: 180px; background-color: #DDDDDD; text-align: center;">商品新規登録</h5>
 <div class="row">
  <div class="col-md-8">
   <div class="form-body p-4">
    <%= form_with model: @item, url:admin_items_path, local:true do |f| %>
     <%= f.label :image, "商品画像" %>
     <%= f.file_field :image, accept: "image/*", class: "w-100" %>
      <div class="input-group mb-3 mt-4">
       <div class="input-group-prepend">
        <span class="input-grout-text" aria-hidden="true"><i class="fas fa-building"></i></span>
       </div>
       <%= f.label :name, "商品名" %><%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
      </div>
     <%= f.label :introduction, "商品説明" %>
     <%= f.text_area :introduction, class:"form-control", placeholder:"ここに説明文を記述します" %>
     <%= f.label :price, "税抜価格" %>
     <%= f.text_field :price, class:"form-cntrol", placeholder:"1000" %>円
     <hr>
     <%= f.submit '新規登録', class:"btn btn-sm btn-success mt-9" %>
    <% end %>
   </div>
  </div>
 </div>
</div>